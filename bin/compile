#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

PCRE_TARBALL=ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-8.35.tar.bz2

BUILD_DIR=$1
CACHE_DIR=$2

cd $CACHE_DIR

echo "-----> Installing PCRE library"
curl --silent --max-time 60 --location "$PCRE_TARBALL" | tar -xj

cd pcre-8.35
./configure --enable-pcre16 --enable-pcre32 --enable-utf --enable-jit --prefix="$BUILD_DIR/.heroku/vendor"
make install
